<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BlueTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <item name="android:background">@color/very_light_blue</item>
    </style>
    <style name="BlueButtonTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
    </style>
    <style name="BlueHeaderTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="BlueToolbarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/navy_blue</item>
    </style>
    <style name="BlueListView" parent="@android:style/Widget.ListView">
        <item name="android:textColor">@color/navy_blue</item>

    </style>
</resources>